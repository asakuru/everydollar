# EveryDollar Zero-Based Budget

# Environment (development or production)
APP_ENV=production

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Security
# Generate with: php -r "echo bin2hex(random_bytes(32));"
SECRET_KEY=generate_a_64_character_hex_string_here

# 2FA Encryption Key (for future use)
# Generate with: php -r "echo base64_encode(random_bytes(32));"
TOTP_ENCRYPTION_KEY=generate_a_base64_encoded_32_byte_key_here
