{
    "name": "everydollar/budget-app",
    "description": "Zero-based budgeting application for households",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4",
        "twig/twig": "^3.8",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "migrate": "php migrations/migrate.php",
        "seed": "php migrations/seed.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
