{% extends "layout.twig" %}

{% block title %}New Account - {{ app_name }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="flex items-center space-x-4 mb-6">
        <a href="{{ base_path('/accounts') }}" class="text-gray-400 hover:text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
        </a>
        <h1 class="text-2xl font-bold text-white">Create New Account</h1>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-sm">
        <form action="{{ base_path('/accounts/store') }}" method="POST" class="space-y-6">
            {{ csrf_field()|raw }}

            <!-- Name -->
            <div>
                <label for="name" class="block text-sm font-medium text-gray-300">Account Name</label>
                <input type="text" name="name" id="name" required
                       placeholder="e.g. Chase Checking"
                       class="mt-1 block w-full rounded-md bg-gray-900 border-gray-600 text-white shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
            </div>

            <!-- Type -->
            <div>
                <label for="type" class="block text-sm font-medium text-gray-300">Account Type</label>
                <select name="type" id="type" required
                        class="mt-1 block w-full rounded-md bg-gray-900 border-gray-600 text-white shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
                    <option value="checking">Checking</option>
                    <option value="savings">Savings</option>
                    <option value="credit">Credit Card</option>
                    <option value="cash">Cash</option>
                </select>
            </div>

            <!-- Initial Balance -->
            <div>
                <label for="initial_balance" class="block text-sm font-medium text-gray-300">Initial Balance</label>
                <div class="mt-1 relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="text-gray-500 sm:text-sm">$</span>
                    </div>
                    <input type="number" name="initial_balance" id="initial_balance" step="0.01" value="0.00"
                           class="block w-full pl-7 pr-12 rounded-md bg-gray-900 border-gray-600 text-white focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
                </div>
                <p class="mt-1 text-sm text-gray-500">Will create an initial adjustment transaction.</p>
            </div>

            <!-- Submit -->
            <div class="flex justify-end pt-4">
                <button type="submit" class="btn btn-primary w-full sm:w-auto">
                    Create Account
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
