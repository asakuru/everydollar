{% extends "layout.twig" %}

{% block title %}Edit Entity - {{ app_name }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="flex items-center space-x-4 mb-6">
        <a href="{{ base_path('/entities') }}" class="text-gray-400 hover:text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
        </a>
        <h1 class="text-2xl font-bold text-white">Edit Entity: {{ entity.name }}</h1>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-sm">
        <form action="{{ base_path('/entities/' ~ entity.id ~ '/update') }}" method="POST" class="space-y-6">
            {{ csrf_field()|raw }}

            <!-- Name -->
            <div>
                <label for="name" class="block text-sm font-medium text-gray-300">Entity Name</label>
                <input type="text" name="name" id="name" required value="{{ entity.name }}"
                       class="mt-1 block w-full rounded-md bg-gray-900 border-gray-600 text-white shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
            </div>

            <!-- Type (Read Only) -->
            <div>
                <label class="block text-sm font-medium text-gray-300">Entity Type</label>
                <input type="text" disabled value="{{ entity.type|capitalize }}"
                       class="mt-1 block w-full rounded-md bg-gray-800 border-gray-700 text-gray-400 cursor-not-allowed sm:text-sm px-4 py-2">
                <p class="mt-1 text-sm text-gray-500">Entity type cannot be changed.</p>
            </div>

            <!-- Business Specific Fields -->
            {% if entity.type == 'business' %}
            <div>
                <label for="tax_rate_percent" class="block text-sm font-medium text-gray-300">Estimated Tax Rate (%)</label>
                <input type="number" name="tax_rate_percent" id="tax_rate_percent" value="{{ entity.tax_rate_percent }}" min="0" max="100" step="0.1"
                       class="mt-1 block w-full rounded-md bg-gray-900 border-gray-600 text-white shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
                <p class="mt-1 text-sm text-gray-500">Percentage of profit to set aside for taxes automatically.</p>
            </div>
            {% endif %}

            <!-- Submit -->
            <div class="flex justify-end pt-4 space-x-3">
                <a href="{{ base_path('/entities') }}" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
