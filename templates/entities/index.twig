{% extends "layout.twig" %}

{% block title %}Manage Entities - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-white">Manage Entities</h1>
        <a href="{{ base_path('/entities/create') }}" class="btn btn-primary">
            + New Entity
        </a>
    </div>

    <!-- Entity List -->
    <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-900/50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Tax Rate</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                {% for entity in entities %}
                <tr class="hover:bg-gray-750">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                        {{ entity.name }}
                        {% if entity.id == current_entity_id %}
                            <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-emerald-900 text-emerald-300">
                                Current
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {% if entity.type == 'business' %}bg-blue-900 text-blue-300{% else %}bg-gray-700 text-gray-300{% endif %}">
                            {{ entity.type|capitalize }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                        {% if entity.type == 'business' %}
                            {{ entity.tax_rate_percent }}%
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{{ base_path('/entities/' ~ entity.id ~ '/edit') }}" class="text-emerald-400 hover:text-emerald-300 mr-4">Edit</a>
                        <a href="{{ base_path('/entities/' ~ entity.id ~ '/switch') }}" class="text-blue-400 hover:text-blue-300">Switch To</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Accounts Section -->
    <div class="mt-8 flex justify-between items-center">
        <h2 class="text-xl font-bold text-white">Bank Accounts</h2>
        <a href="{{ base_path('/accounts') }}" class="text-emerald-400 hover:text-emerald-300 text-sm">Manage Accounts &rarr;</a>
    </div>
</div>
{% endblock %}
