{% extends "layout.twig" %}

{% block title %}Edit Transaction - {{ app_name }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-white">Edit Transaction</h1>
        <a href="{{ base_path('/transactions/' ~ transaction.date[:7]) }}" 
           class="text-gray-400 hover:text-white transition-colors">
            ‚Üê Back
        </a>
    </div>
    
    <!-- Edit Form -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-6">
        <form method="POST" action="{{ base_path('/transaction/' ~ transaction.id ~ '/update') }}" class="space-y-5">
            {{ csrf_field()|raw }}
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm text-gray-400 mb-1">Date</label>
                    <input type="date" name="date" value="{{ transaction.date }}" required
                           class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                </div>
                
                <div>
                    <label class="block text-sm text-gray-400 mb-1">Type</label>
                    <select name="type" required
                            class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                        <option value="expense" {% if transaction.type == 'expense' %}selected{% endif %}>Expense</option>
                        <option value="income" {% if transaction.type == 'income' %}selected{% endif %}>Income</option>
                    </select>
                </div>
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Payee</label>
                <input type="text" name="payee" value="{{ transaction.payee }}" required
                       class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Amount</label>
                <input type="text" name="amount" value="{{ "%.2f"|format(transaction.amount_cents / 100) }}" required
                       class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Category</label>
                <select name="category_id"
                        class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    <option value="">-- Uncategorized --</option>
                    {% set current_group = '' %}
                    {% for cat in categories %}
                        {% if cat.group_name != current_group %}
                            {% if current_group != '' %}</optgroup>{% endif %}
                            <optgroup label="{{ cat.group_name }}">
                            {% set current_group = cat.group_name %}
                        {% endif %}
                        <option value="{{ cat.id }}" {% if cat.id == transaction.category_id %}selected{% endif %}>{{ cat.name }}</option>
                    {% endfor %}
                    {% if current_group != '' %}</optgroup>{% endif %}
                </select>
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Memo (optional)</label>
                <input type="text" name="memo" value="{{ transaction.memo }}"
                       class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div class="flex justify-between pt-4">
                <button type="submit" 
                        class="px-6 py-2 bg-emerald-600 hover:bg-emerald-500 text-white font-medium rounded-lg transition-colors">
                    Save Changes
                </button>
            </div>
        </form>
        
        <!-- Delete Form -->
        <form method="POST" action="{{ base_path('/transaction/' ~ transaction.id ~ '/delete') }}" 
              class="mt-6 pt-6 border-t border-gray-700">
            {{ csrf_field()|raw }}
            <button type="submit" 
                    onclick="return confirm('Are you sure you want to delete this transaction?')"
                    class="px-4 py-2 bg-red-900/50 hover:bg-red-900 text-red-400 text-sm rounded-lg transition-colors">
                Delete Transaction
            </button>
        </form>
    </div>
</div>
{% endblock %}
