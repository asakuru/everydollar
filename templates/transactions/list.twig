{% extends "layout.twig" %}

{% block title %}Transactions {{ month_display }} - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-center space-x-4">
            <a href="{{ base_path('/transactions/' ~ prev_month) }}" 
               class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <h1 class="text-2xl font-bold text-white">{{ month_display }}</h1>
            <a href="{{ base_path('/transactions/' ~ next_month) }}" 
               class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
        
        <div class="flex items-center space-x-3">
            <a href="{{ base_path('/transactions/' ~ month ~ '/uncategorized') }}" 
               class="px-4 py-2 text-sm bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg transition-colors">
                Uncategorized
            </a>
            <a href="{{ base_path('/budget/' ~ month) }}" 
               class="px-4 py-2 text-sm bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg transition-colors">
                View Budget
            </a>
        </div>
    </div>
    
    <!-- Add Transaction Form -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-5">
        <h2 class="text-lg font-semibold text-white mb-4">Add Transaction</h2>
        <form method="POST" action="{{ base_path('/transaction') }}" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4">
            {{ csrf_field()|raw }}
            <input type="hidden" name="return_to" value="{{ base_path('/transactions/' ~ month) }}">
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Date</label>
                <input type="date" name="date" value="{{ "now"|date("Y-m-d") }}" required
                       class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Type</label>
                <select name="type" required
                        class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    <option value="expense">Expense</option>
                    <option value="income">Income</option>
                </select>
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Payee</label>
                <input type="text" name="payee" required placeholder="Who did you pay?"
                       class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Amount</label>
                <input type="text" name="amount" required placeholder="0.00"
                       class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Category</label>
                <select name="category_id"
                        class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    <option value="">-- Uncategorized --</option>
                    {% set current_group = '' %}
                    {% for cat in categories %}
                        {% if cat.group_name != current_group %}
                            {% if current_group != '' %}</optgroup>{% endif %}
                            <optgroup label="{{ cat.group_name }}">
                            {% set current_group = cat.group_name %}
                        {% endif %}
                        <option value="{{ cat.id }}">{{ cat.name }}</option>
                    {% endfor %}
                    {% if current_group != '' %}</optgroup>{% endif %}
                </select>
            </div>
            
            <div class="flex items-end">
                <button type="submit" 
                        class="w-full px-4 py-2 bg-emerald-600 hover:bg-emerald-500 text-white font-medium rounded-lg transition-colors">
                    Add
                </button>
            </div>
        </form>
    </div>
    
    <!-- Transactions List -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-850">
                <tr class="text-left text-sm text-gray-400">
                    <th class="px-5 py-3 font-medium">Date</th>
                    <th class="px-5 py-3 font-medium">Payee</th>
                    <th class="px-5 py-3 font-medium">Category</th>
                    <th class="px-5 py-3 font-medium text-right">Amount</th>
                    <th class="px-5 py-3 font-medium w-20"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                {% for transaction in transactions %}
                <tr class="hover:bg-gray-750">
                    <td class="px-5 py-3 text-gray-300">{{ transaction.date|date("M j") }}</td>
                    <td class="px-5 py-3">
                        <div class="text-white">{{ transaction.payee }}</div>
                        {% if transaction.memo %}
                        <div class="text-sm text-gray-500">{{ transaction.memo }}</div>
                        {% endif %}
                    </td>
                    <td class="px-5 py-3">
                        {% if transaction.category_name %}
                        <span class="text-gray-300">{{ transaction.group_name }} â€º {{ transaction.category_name }}</span>
                        {% else %}
                        <span class="text-yellow-500 text-sm">Uncategorized</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-3 text-right font-medium {% if transaction.type == 'income' %}text-emerald-400{% else %}text-white{% endif %}">
                        {% if transaction.type == 'income' %}+{% else %}-{% endif %}${{ "%.2f"|format(transaction.amount_cents / 100) }}
                    </td>
                    <td class="px-5 py-3">
                        <a href="{{ base_path('/transaction/' ~ transaction.id ~ '/edit') }}" 
                           class="text-gray-400 hover:text-white transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="px-5 py-8 text-center text-gray-500">
                        No transactions this month. Add one above!
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
