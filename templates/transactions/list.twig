{% extends "layout.twig" %}

{% block title %}Transactions {{ month_display }} - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Filters & Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <!-- Month Navigation -->
        <div class="flex items-center space-x-4">
            <a href="{{ base_path('/transactions/' ~ prev_month) }}" 
               class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <h1 class="text-2xl font-bold text-white">{{ month_display }}</h1>
            <a href="{{ base_path('/transactions/' ~ next_month) }}" 
               class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
        
        <!-- Filters & Actions -->
        <div class="flex items-center space-x-3 flex-wrap">
            <!-- Account Filter -->
            <form method="GET" class="flex items-center">
                 <select name="account" onchange="this.form.submit()" 
                        class="px-3 py-2 text-sm bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg border-none focus:ring-0 cursor-pointer">
                    <option value="">All Accounts</option>
                    {% for acc in accounts %}
                        <option value="{{ acc.id }}" {% if filters.account == acc.id %}selected{% endif %}>{{ acc.name }}</option>
                    {% endfor %}
                </select>
            </form>

            <a href="{{ base_path('/transactions/' ~ month ~ '/uncategorized') }}" 
               class="px-4 py-2 text-sm bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg transition-colors">
                Uncategorized
            </a>
            <a href="{{ base_path('/budget/' ~ month) }}" 
               class="px-4 py-2 text-sm bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg transition-colors">
                View Budget
            </a>
        </div>
    </div>
    
    <!-- Add Transaction Form -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-5">
        <h2 class="text-lg font-semibold text-white mb-4">Add Transaction</h2>
        <form method="POST" action="{{ base_path('/transaction') }}" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4">
            {{ csrf_field()|raw }}
            <input type="hidden" name="return_to" value="{{ base_path('/transactions/' ~ month) }}">
            {% if current_entity_id %}
            <input type="hidden" name="entity_id" value="{{ current_entity_id }}">
            {% endif %}
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Date</label>
                <input type="date" name="date" value="{{ "now"|date("Y-m-d") }}" required
                       class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Type</label>
                <select name="type" required
                        class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    <option value="expense">Expense</option>
                    <option value="income">Income</option>
                </select>
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Payee</label>
                <input type="text" name="payee" required placeholder="Who?"
                       class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
            
            <div>
                <label class="block text-sm text-gray-400 mb-1">Amount</label>
                <input type="text" name="amount" required placeholder="0.00"
                       class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-emerald-500">
            </div>

             <div>
                <label class="block text-sm text-gray-400 mb-1">Account</label>
                <select name="account_id"
                        class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    <option value="">-- None --</option>
                    {% for acc in accounts %}
                        <option value="{{ acc.id }}">{{ acc.name }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-span-1 sm:col-span-2 lg:col-span-2">
                <label class="block text-sm text-gray-400 mb-1">Category</label>
                <div class="flex space-x-2">
                    <select name="category_id" id="main-category-select"
                            class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                        <option value="">-- Uncategorized --</option>
                        {% set current_group = '' %}
                        {% for cat in categories %}
                            {% if cat.group_name != current_group %}
                                {% if current_group != '' %}</optgroup>{% endif %}
                                <optgroup label="{{ cat.group_name }}">
                                {% set current_group = cat.group_name %}
                            {% endif %}
                            <option value="{{ cat.id }}">{{ cat.name }}</option>
                        {% endfor %}
                        {% if current_group != '' %}</optgroup>{% endif %}
                    </select>
                    <button type="button" id="btn-toggle-split" 
                            class="px-3 py-2 bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg whitespace-nowrap"
                            title="Split Transaction">
                        Split
                    </button>
                </div>

                <!-- Hidden Split Fields -->
                <div id="split-container" class="hidden mt-3 space-y-2 border-t border-gray-700 pt-3">
                    <div class="text-sm text-gray-400 flex justify-between">
                        <span>Splits</span>
                        <span id="split-total-display">$0.00 / $0.00</span>
                    </div>
                    <div id="split-rows" class="space-y-2">
                        <!-- Rows injected via JS -->
                    </div>
                    <button type="button" id="btn-add-split-row" class="text-xs text-emerald-400 hover:text-emerald-300">
                        + Add Split Line
                    </button>
                </div>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const btnToggle = document.getElementById('btn-toggle-split');
                    const splitContainer = document.getElementById('split-container');
                    const mainSelect = document.getElementById('main-category-select');
                    const splitRows = document.getElementById('split-rows');
                    const amountInput = document.querySelector('input[name="amount"]');
                    const totalDisplay = document.getElementById('split-total-display');
                    let isSplit = false;

                    // Categories data for JS
                    const categories = [
                        {% for cat in categories %}
                        {id: {{ cat.id }}, name: "{{ cat.name|e('js') }}", group: "{{ cat.group_name|e('js') }}"},
                        {% endfor %}
                    ];

                    btnToggle.addEventListener('click', function() {
                        isSplit = !isSplit;
                        if (isSplit) {
                            splitContainer.classList.remove('hidden');
                            mainSelect.disabled = true;
                            mainSelect.value = ""; // Clear main
                            btnToggle.classList.add('bg-emerald-600', 'text-white');
                            btnToggle.classList.remove('bg-gray-700', 'text-gray-300');
                            
                            if (splitRows.children.length === 0) {
                                addSplitRow();
                                addSplitRow();
                            }
                            updateTotal();
                        } else {
                            splitContainer.classList.add('hidden');
                            mainSelect.disabled = false;
                            btnToggle.classList.remove('bg-emerald-600', 'text-white');
                            btnToggle.classList.add('bg-gray-700', 'text-gray-300');
                            // Clear splits? No, keep in case user toggles back, but maybe clear inputs on submit if hidden
                        }
                    });

                    document.getElementById('btn-add-split-row').addEventListener('click', () => addSplitRow());

                    function addSplitRow() {
                        const index = splitRows.children.length;
                        const row = document.createElement('div');
                        row.className = 'flex space-x-2';
                        row.innerHTML = `
                            <select name="splits[${index}][category_id]" class="flex-1 px-2 py-1 bg-gray-900 border border-gray-600 rounded text-sm text-white">
                                <option value="">Select...</option>
                                ${generateCategoryOptions()}
                            </select>
                            <input type="text" name="splits[${index}][amount]" placeholder="0.00" 
                                   class="w-24 px-2 py-1 bg-gray-900 border border-gray-600 rounded text-sm text-white split-amount"
                                   oninput="updateSplitTotal()">
                            <button type="button" onclick="this.parentElement.remove(); updateSplitTotal()" class="text-red-400 hover:text-red-300 px-1">&times;</button>
                        `;
                        splitRows.appendChild(row);
                    }

                    function generateCategoryOptions() {
                        let html = '';
                        let currentGroup = '';
                        categories.forEach(cat => {
                            if (cat.group !== currentGroup) {
                                if (currentGroup !== '') html += '</optgroup>';
                                html += `<optgroup label="${cat.group}">`;
                                currentGroup = cat.group;
                            }
                            html += `<option value="${cat.id}">${cat.name}</option>`;
                        });
                        if (currentGroup !== '') html += '</optgroup>';
                        return html;
                    }

                    window.updateSplitTotal = function() { // Global scope for inline onclick
                        let total = 0;
                        document.querySelectorAll('.split-amount').forEach(inp => {
                            total += parseFloat(inp.value.replace(/,/g, '')) || 0;
                        });
                        
                        const mainAmount = parseFloat(amountInput.value.replace(/,/g, '')) || 0;
                        totalDisplay.innerText = `$${total.toFixed(2)} / $${mainAmount.toFixed(2)}`;
                        
                        // Valid color
                        if (Math.abs(total - mainAmount) < 0.01) {
                            totalDisplay.classList.add('text-emerald-400');
                            totalDisplay.classList.remove('text-red-400');
                        } else {
                            totalDisplay.classList.add('text-red-400');
                            totalDisplay.classList.remove('text-emerald-400');
                        }
                    };

                    amountInput.addEventListener('input', updateSplitTotal);
                });
            </script>
            
            <div class="hidden lg:block"></div> <!-- Spacer if needed or adjust grid -->
            
            <div class="flex items-end col-span-1 sm:col-span-2 lg:col-span-6 xl:col-span-1">
                <button type="submit" 
                        class="w-full px-4 py-2 bg-emerald-600 hover:bg-emerald-500 text-white font-medium rounded-lg transition-colors">
                    Add
                </button>
            </div>
        </form>
    </div>
    
    <!-- Transactions List -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-850">
                <tr class="text-left text-sm text-gray-400">
                    <th class="px-5 py-3 font-medium">Date</th>
                    <th class="px-5 py-3 font-medium">Payee</th>
                    <th class="px-5 py-3 font-medium">Account</th>
                    <th class="px-5 py-3 font-medium">Category</th>
                    <th class="px-5 py-3 font-medium text-right">Amount</th>
                    <th class="px-5 py-3 font-medium w-20"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                {% for transaction in transactions %}
                <tr class="hover:bg-gray-750">
                    <td class="px-5 py-3 text-gray-300">{{ transaction.date|date("M j") }}</td>
                    <td class="px-5 py-3">
                        <div class="text-white">{{ transaction.payee }}</div>
                        {% if transaction.memo %}
                        <div class="text-sm text-gray-500">{{ transaction.memo }}</div>
                        {% endif %}
                    </td>
                    <td class="px-5 py-3 text-sm text-gray-400">
                         {{ transaction.account_name ?? '-' }}
                    </td>
                    <td class="px-5 py-3">
                        {% if transaction.category_name %}
                        <span class="text-gray-300">{{ transaction.group_name }} â€º {{ transaction.category_name }}</span>
                        {% else %}
                        <span class="text-yellow-500 text-sm">Uncategorized</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-3 text-right font-medium {% if transaction.type == 'income' %}text-emerald-400{% else %}text-white{% endif %}">
                        {% if transaction.type == 'income' %}+{% else %}-{% endif %}${{ "%.2f"|format(transaction.amount_cents / 100) }}
                    </td>
                    <td class="px-5 py-3">
                        <div class="flex items-center justify-end space-x-3">
                            <a href="{{ base_path('/transaction/' ~ transaction.id ~ '/edit') }}" 
                               class="text-gray-400 hover:text-white transition-colors" title="Edit">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </a>
                            <form action="{{ base_path('/transaction/' ~ transaction.id ~ '/delete') }}" method="POST" 
                                  onsubmit="return confirm('Delete this transaction?');" class="inline-flex">
                                {{ csrf_field()|raw }}
                                <button type="submit" class="text-red-400 hover:text-red-300 transition-colors" title="Delete">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-8 text-center text-gray-500">
                        No transactions this month. Add one above!
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
