{% extends "layout.twig" %}

{% block title %}Uncategorized Transactions - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-white">Uncategorized Transactions</h1>
            <p class="text-gray-400">{{ month_display }}</p>
        </div>
        <a href="{{ base_path('/transactions/' ~ month) }}" 
           class="px-4 py-2 text-sm bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg transition-colors">
            ‚Üê Back to All
        </a>
    </div>
    
    {% if transactions|length > 0 %}
    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-850">
                <tr class="text-left text-sm text-gray-400">
                    <th class="px-5 py-3 font-medium">Date</th>
                    <th class="px-5 py-3 font-medium">Payee</th>
                    <th class="px-5 py-3 font-medium text-right">Amount</th>
                    <th class="px-5 py-3 font-medium">Assign Category</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                {% for transaction in transactions %}
                <tr class="hover:bg-gray-750">
                    <td class="px-5 py-3 text-gray-300">{{ transaction.date|date("M j") }}</td>
                    <td class="px-5 py-3">
                        <div class="text-white">{{ transaction.payee }}</div>
                        {% if transaction.memo %}
                        <div class="text-sm text-gray-500">{{ transaction.memo }}</div>
                        {% endif %}
                    </td>
                    <td class="px-5 py-3 text-right font-medium {% if transaction.type == 'income' %}text-emerald-400{% else %}text-white{% endif %}">
                        {% if transaction.type == 'income' %}+{% else %}-{% endif %}${{ "%.2f"|format(transaction.amount_cents / 100) }}
                    </td>
                    <td class="px-5 py-3">
                        <form method="POST" action="{{ base_path('/transaction/' ~ transaction.id ~ '/categorize') }}" class="flex items-center space-x-2">
                            {{ csrf_field()|raw }}
                            <select name="category_id" required
                                    class="flex-1 px-3 py-1.5 bg-gray-900 border border-gray-600 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500">
                                <option value="">Select...</option>
                                {% set current_group = '' %}
                                {% for cat in categories %}
                                    {% if cat.group_name != current_group %}
                                        {% if current_group != '' %}</optgroup>{% endif %}
                                        <optgroup label="{{ cat.group_name }}">
                                        {% set current_group = cat.group_name %}
                                    {% endif %}
                                    <option value="{{ cat.id }}">{{ cat.name }}</option>
                                {% endfor %}
                                {% if current_group != '' %}</optgroup>{% endif %}
                            </select>
                            <button type="submit" 
                                    class="px-3 py-1.5 bg-emerald-600 hover:bg-emerald-500 text-white text-sm rounded-lg transition-colors">
                                Assign
                            </button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-8 text-center">
        <div class="text-emerald-400 mb-2">
            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-white mb-1">All caught up!</h3>
        <p class="text-gray-400">No uncategorized transactions this month.</p>
    </div>
    {% endif %}
</div>
{% endblock %}
