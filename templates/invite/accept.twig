{% extends "layout.twig" %}

{% block title %}Accept Invite - {{ app_name }}{% endblock %}

{% block content %}
<div class="min-h-[70vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-emerald-400">{{ app_name }}</h1>
            <p class="text-gray-400 mt-2">Join {{ invite.household_name }}</p>
        </div>
        
        <!-- Accept Card -->
        <div class="bg-gray-800 rounded-xl shadow-xl border border-gray-700 p-8">
            <div class="text-center mb-6">
                <p class="text-gray-300">You've been invited to join</p>
                <p class="text-xl font-semibold text-white mt-1">{{ invite.household_name }}</p>
            </div>
            
            {% if errors %}
            <div class="mb-6 bg-red-900/30 border border-red-700 rounded-lg px-4 py-3">
                <ul class="list-disc list-inside text-red-400 text-sm">
                    {% for error in errors %}
                    <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
            
            <form method="POST" action="{{ base_path('/invite/' ~ token) }}" class="space-y-5">
                {{ csrf_field()|raw }}
                
                <div>
                    <label class="block text-sm text-gray-400 mb-1">Email</label>
                    <input type="email" value="{{ invite.email }}" disabled
                           class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-gray-400">
                </div>
                
                <div>
                    <label for="name" class="block text-sm text-gray-400 mb-1">Your Name</label>
                    <input type="text" id="name" name="name" value="{{ name|default('') }}" required
                           class="w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                </div>
                
                <div>
                    <label for="password" class="block text-sm text-gray-400 mb-1">Create Password</label>
                    <input type="password" id="password" name="password" required
                           class="w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    <p class="mt-1 text-xs text-gray-500">Minimum 12 characters</p>
                </div>
                
                <div>
                    <label for="password_confirm" class="block text-sm text-gray-400 mb-1">Confirm Password</label>
                    <input type="password" id="password_confirm" name="password_confirm" required
                           class="w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                </div>
                
                <button type="submit" 
                        class="w-full bg-emerald-600 hover:bg-emerald-500 text-white font-semibold py-3 px-4 rounded-lg transition-colors">
                    Join Household
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
