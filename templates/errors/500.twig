{% extends "layout.twig" %}

{% block title %}Error - {{ app_name }}{% endblock %}

{% block content %}
<div class="min-h-[70vh] flex items-center justify-center">
    <div class="text-center">
        <div class="text-red-400 mb-4">
            <svg class="w-20 h-20 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
        </div>
        <h1 class="text-3xl font-bold text-white mb-2">500</h1>
        <p class="text-xl text-gray-400 mb-6">{{ message|default('Something went wrong') }}</p>
        <a href="{{ base_path('/') }}" 
           class="inline-block px-6 py-3 bg-emerald-600 hover:bg-emerald-500 text-white font-medium rounded-lg transition-colors">
            Go Home
        </a>
    </div>
</div>
{% endblock %}
