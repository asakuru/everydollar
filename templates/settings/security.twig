{% extends "layout.twig" %}

{% block title %}Security Settings - {{ app_name }}{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-white">Settings</h1>
    </div>

    <!-- settings navigation -->
    <div class="border-b border-gray-700">
        <ul class="flex flex-wrap -mb-px text-sm font-medium text-center text-gray-400">
            <li class="mr-2">
                <a href="{{ base_path('/settings/security') }}" class="inline-block p-4 rounded-t-lg hover:text-gray-300 hover:bg-gray-800 {{ active_tab == 'security' or active_tab is empty ? 'text-emerald-400 border-b-2 border-emerald-400 active' : 'border-transparent' }}">
                    Security
                </a>
            </li>
            <li class="mr-2">
                <a href="{{ base_path('/settings/rules') }}" class="inline-block p-4 rounded-t-lg hover:text-gray-300 hover:bg-gray-800 {{ active_tab == 'rules' ? 'text-emerald-400 border-b-2 border-emerald-400 active' : 'border-transparent' }}">
                    Auto-Categorization
                </a>
            </li>
        </ul>
    </div>
    
    <!-- Two-Factor Authentication -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-6">
        <div class="flex items-start justify-between">
            <div>
                <h2 class="text-lg font-semibold text-white">Two-Factor Authentication</h2>
                <p class="text-gray-400 mt-1">Add an extra layer of security to your account.</p>
            </div>
            
            {% if totp_enabled %}
            <span class="px-3 py-1 bg-emerald-900/50 text-emerald-400 text-sm rounded-full border border-emerald-700">
                Enabled
            </span>
            {% else %}
            <span class="px-3 py-1 bg-gray-700 text-gray-400 text-sm rounded-full">
                Disabled
            </span>
            {% endif %}
        </div>
        
        <div class="mt-6 p-4 bg-gray-900 rounded-lg border border-gray-700">
            <div class="flex items-center space-x-3 text-yellow-500">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span class="font-medium">Coming Soon</span>
            </div>
            <p class="text-gray-400 mt-2 text-sm">
                Two-factor authentication using authenticator apps (TOTP) will be available in a future update.
                This will allow you to use apps like Google Authenticator, Authy, or 1Password for additional security.
            </p>
        </div>
    </div>
    
    <!-- Session Security -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-6">
        <h2 class="text-lg font-semibold text-white">Session Security</h2>
        <p class="text-gray-400 mt-1">Your session is secured with the following protections:</p>
        
        <ul class="mt-4 space-y-3">
            <li class="flex items-center text-sm">
                <svg class="w-4 h-4 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-300">HTTPS-only cookies</span>
            </li>
            <li class="flex items-center text-sm">
                <svg class="w-4 h-4 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-300">HttpOnly flag prevents JavaScript access</span>
            </li>
            <li class="flex items-center text-sm">
                <svg class="w-4 h-4 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-300">SameSite protection against CSRF attacks</span>
            </li>
            <li class="flex items-center text-sm">
                <svg class="w-4 h-4 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-300">Session expires when browser closes</span>
            </li>
            <li class="flex items-center text-sm">
                <svg class="w-4 h-4 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-300">Rate limiting on login attempts</span>
            </li>
        </ul>
    </div>
    
    <!-- Invite Member (Owner Only) -->
    {% if user.role == 'owner' %}
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-6">
        <h2 class="text-lg font-semibold text-white">Household Members</h2>
        <p class="text-gray-400 mt-1">Invite your spouse or partner to share this budget.</p>
        
        <a href="{{ base_path('/invite') }}" 
           class="mt-4 inline-block px-4 py-2 bg-emerald-600 hover:bg-emerald-500 text-white font-medium rounded-lg transition-colors">
            Manage Invites
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
