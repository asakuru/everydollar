{% extends "layout.twig" %}

{% block title %}New Invoice - {{ app_name }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="flex items-center space-x-4 mb-6">
         <a href="{{ base_path('/invoices') }}" class="text-gray-400 hover:text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
        </a>
        <h1 class="text-2xl font-bold text-white">Create New Invoice</h1>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-sm">
        <form action="{{ base_path('/invoices/store') }}" method="POST" class="space-y-6">
            {{ csrf_field()|raw }}

             <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                 <!-- Invoice Number -->
                <div>
                    <label for="invoice_number" class="block text-sm font-medium text-gray-300">Invoice Number</label>
                    <input type="text" name="invoice_number" id="invoice_number" required
                           value="{{ next_number }}"
                           class="mt-1 block w-full rounded-md bg-gray-900 border-gray-600 text-white shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
                </div>

                <!-- Due Date -->
                <div>
                     <label for="due_date" class="block text-sm font-medium text-gray-300">Due Date</label>
                    <input type="date" name="due_date" id="due_date" required
                           value="{{ 'now'|date_modify('+30 days')|date('Y-m-d') }}"
                           class="mt-1 block w-full rounded-md bg-gray-900 border-gray-600 text-white shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
                </div>
            </div>

            <!-- Client Name -->
            <div>
                <label for="client_name" class="block text-sm font-medium text-gray-300">Client Name</label>
                <input type="text" name="client_name" id="client_name" required
                       placeholder="Client Name or Company"
                       class="mt-1 block w-full rounded-md bg-gray-900 border-gray-600 text-white shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
            </div>

            <!-- Amount -->
             <div>
                <label for="amount" class="block text-sm font-medium text-gray-300">Amount</label>
                <div class="mt-1 relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="text-gray-500 sm:text-sm">$</span>
                    </div>
                    <input type="number" name="amount" id="amount" step="0.01" required
                           placeholder="0.00"
                           class="block w-full pl-7 pr-12 rounded-md bg-gray-900 border-gray-600 text-white focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm px-4 py-2">
                </div>
            </div>

            <!-- Submit -->
            <div class="flex justify-end pt-4">
                <button type="submit" class="btn btn-primary w-full sm:w-auto">
                    Create Invoice
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
