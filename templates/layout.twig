<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Zero-based budgeting for your household">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Main CSS -->
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    
    {% block head %}{% endblock %}
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
    {% if user %}
    <!-- Navigation -->
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center space-x-8">
                    <a href="{{ base_path('/') }}" class="text-xl font-bold text-emerald-400">
                        {{ app_name }}
                    </a>
                    <div class="hidden md:flex space-x-4">
                        {% set current_month = "now"|date("Y-m") %}
                        <a href="{{ base_path('/budget/' ~ current_month) }}" 
                           class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 transition-colors">
                            Budget
                        </a>
                        <a href="{{ base_path('/transactions/' ~ current_month) }}" 
                           class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 transition-colors">
                            Transactions
                        </a>
                        <a href="{{ base_path('/import') }}" 
                           class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 transition-colors">
                            Import
                        </a>
                        <a href="{{ base_path('/reports') }}" 
                           class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 transition-colors">
                            Reports
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <!-- Entity Switcher & Actions -->
                    <div class="relative">
                        <button id="entity-menu-button" class="flex items-center space-x-2 text-gray-300 hover:text-white focus:outline-none" aria-expanded="false" aria-haspopup="true">
                            <span class="font-medium max-w-[150px] truncate">{{ current_entity.name ?? 'Personal' }}</span>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        
                        <!-- Dropdown Menu -->
                        <div id="entity-menu-dropdown" class="absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded-md shadow-lg py-1 hidden z-50">
                            <div class="px-4 py-2 border-b border-gray-700">
                                <span class="text-xs text-gray-500 uppercase font-semibold">Switch Entity</span>
                            </div>
                            {% for entity in user_entities %}
                                <a href="{{ base_path('/entities/' ~ entity.id ~ '/switch') }}" 
                                   class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white {% if entity.id == current_entity_id %}font-bold text-emerald-400{% endif %}">
                                    {{ entity.name }}
                                </a>
                            {% endfor %}
                            
                            <div class="border-t border-gray-700 my-1"></div>
                            
                            <a href="{{ base_path('/entities') }}" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                Manage Entities
                            </a>
                            <a href="{{ base_path('/accounts') }}" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                Manage Accounts
                            </a>
                            {% if current_entity.type == 'business' %}
                                <a href="{{ base_path('/llc-dashboard') }}" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                    LLC Dashboard
                                </a>
                                <a href="{{ base_path('/invoices') }}" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                    Invoices
                                </a>
                            {% endif %}
                        </div>
                    </div>

                    <span class="text-sm text-gray-400">|</span>
                    <span class="text-sm text-gray-400">{{ user.name }}</span>
                    <a href="{{ base_path('/settings/security') }}" 
                       class="text-gray-400 hover:text-white transition-colors" title="Settings">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    </a>
                    <a href="{{ base_path('/logout') }}" 
                       class="text-gray-400 hover:text-white transition-colors" title="Logout">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    {% endif %}
    
    <!-- Flash Messages -->
    {% if flash %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="rounded-lg px-4 py-3 {% if flash.type == 'success' %}bg-emerald-900/50 text-emerald-400 border border-emerald-700{% elseif flash.type == 'error' %}bg-red-900/50 text-red-400 border border-red-700{% elseif flash.type == 'warning' %}bg-yellow-900/50 text-yellow-400 border border-yellow-700{% else %}bg-blue-900/50 text-blue-400 border border-blue-700{% endif %}">
            {{ flash.message }}
        </div>
    </div>
    {% endif %}
    
    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {% block content %}{% endblock %}
    </main>
    
    <!-- Footer -->
    <footer class="border-t border-gray-800 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <p class="mt-12 text-center text-slate-500 text-sm pb-8">
        &copy; {{ "now"|date("Y") }} ZeroBased. All rights reserved. <br>
        <span class="text-xs opacity-50">v1.0.1-debug (Transaction Fix)</span>
    </p>
        </div>
    </footer>
    
    {% block scripts %}{% endblock %}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const button = document.getElementById('entity-menu-button');
            const menu = document.getElementById('entity-menu-dropdown');
            
            if (button && menu) {
                button.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const isExpanded = button.getAttribute('aria-expanded') === 'true';
                    button.setAttribute('aria-expanded', !isExpanded);
                    menu.classList.toggle('hidden');
                });
                
                // Close menu when clicking outside
                document.addEventListener('click', function(e) {
                    if (!button.contains(e.target) && !menu.contains(e.target)) {
                        button.setAttribute('aria-expanded', 'false');
                        menu.classList.add('hidden');
                    }
                });
            }
        });
    </script>
</body>
</html>
